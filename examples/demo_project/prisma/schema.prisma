// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  post  Post[]

  @@map("user")
}

model Post {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int

  @@map("post")
}
